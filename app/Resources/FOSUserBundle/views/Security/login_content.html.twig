<!-- breadcrumbs -->
<nav aria-label="breadcrumb">
    <ol class="breadcrumb d-flex justify-content-center">
        <li class="breadcrumb-item">
            <a>Home</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Login</li>
    </ol>
</nav>

<!-- //breadcrumbs -->
<div class="modal-body align-w3">
<form action="{{ path("fos_user_security_check") }}" method="post" class="p-sm-3">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <div class="form-group">
    <label for="username" class="col-form-label">{{ 'security.login.username'|trans }}</label>
    <input type="text" class="form-control"  id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
    </div>
    <div class="form-group">
    <label for="password" class="col-form-label">{{ 'security.login.password'|trans }}</label>
    <input type="password" class="form-control" id="password" name="_password" required="required" autocomplete="current-password" />
    </div>

<div class="row sub-w3l my-3">
    <div class="col-sm-6 sub-w3layouts_hub">
    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    </div>
    <div class="right-w3l">
        <input type="submit" class="form-control bg-theme"id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
    </div>

</div>
</form>
</div>
