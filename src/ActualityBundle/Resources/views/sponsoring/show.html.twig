{% extends 'template.html.twig' %}

{% block dynamique %}
    <h1>Sponsoring</h1>

    <table border="2">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sponsoring.id }}</td>
            </tr>
            <tr>
                <th>Datecontrat</th>
                <td>{% if sponsoring.dateContrat %}{{ sponsoring.dateContrat|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ sponsoring.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('sponsoring_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('sponsoring_edit', { 'id': sponsoring.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
    <img src="{{ asset('images/facebook.png') }}"/>
    {{ socialButtons( {'pinterest':false} ) }}


    {{ socialLinks() }}
{% endblock %}
