{% extends 'template.html.twig' %}

{% block dynamique %}

    <div class="card">
        <div class="card-header border-0">
            <h3 class="card-title">List of all News</h3>
            <div class="card-tools">
                <a href="#" class="btn btn-tool btn-sm">
                    <i class="fas fa-download"></i>
                </a>
                <a href="#" class="btn btn-tool btn-sm">
                    <i class="fas fa-bars"></i>
                </a>
            </div>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped table-valign-middle">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Datedebut</th>
                    <th>Datefin</th>
                    <th>Description</th>
                    <th>Titre</th>
                    <th>Img</th>
                    <th>State</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for actualite in actualites %}
                    <tr>
                        <td><a href="{{ path('actualites_show', { 'id': actualite.id }) }}">{{ actualite.id }}</a></td>
                        <td>{% if actualite.dateDebut %}{{ actualite.dateDebut|date('Y-m-d') }}{% endif %}</td>
                        <td>{% if actualite.dateFin %}{{ actualite.dateFin|date('Y-m-d') }}{% endif %}</td>
                        <td>{{ actualite.description }}</td>
                        <td>{{ actualite.titre }}</td>
                        <td><img src="{{ asset('images/'~ actualite.img) }}" height="100px" width="200px"  /></td>
                        <td>{{ actualite.state }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('actualites_show', { 'id': actualite.id }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('actualites_edit', { 'id': actualite.id }) }}">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <!-- /.card -->

    <ul>
        <li>
            <a href="{{ path('actualites_new') }}">Create a new actualite</a>
        </li>
    </ul>
    <ul>
        <li>
            <a href="{{ path('actualites_signalshow') }}">List of reported news</a>
        </li>
    </ul>

    {{ socialButtons( {'pinterest':false} ) }}
     {{ socialLinks() }}

{% endblock %}
